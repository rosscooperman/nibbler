<% @page_title = "Home" %>

<%= content_tag :div, '', :id => 'fullMap', :"data-markers" => image_path('markers.png') %>

<section class="topContainer">
  <div class="topWrapper clearfix">
    <header>
      <h1 rel="header"><%= link_to "Nibbler.me", root_path, :rel => "#{company_name} Home Page" %></h1>
    </header>
    <section class="clearfix">
      <%= render 'search' %>
    </section>
  </div>
</section>

<section class="logoMarker">Nibbler</section>

<section class="noobSearch">
	<h2>Search for your favorite food&nbsp;truck or enter location.</h2>
  <%= render 'search' %>
</section>

<section class="resultsWrap">
  <button class="showResults" style="display: none;">SHOW/HIDE RESULTS</button>
  <ul class="results"></ul>
  <script id="result-template" type="text/x-handlebars-template">
    <li>
      <h4>{{mapIndex}}. {{truck.name}}</h4>
      <div>
				<p>{{truck.description}}</p>
			</div>
    </li>
  </script>
</section>