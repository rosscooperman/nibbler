<%= error_messages_for :page, :header => false %>
<%= form_for :page :url => (@page.new_record? ? admin_pages_path : admin_page_path(@page)), :html => {:method => (@page.new_record? ? :post : :put), :multipart => true} do |f| -%>
<div class="std_form">
    <%= f.label :slug %>
    <%= f.text_field :slug %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :body %>
    <%= f.text_area :body %>
    <%= submit_tag "Save" %>
</div>
<% end -%>